<h1>Mechanic's Show Page</h1>

<p>Name: <%= @mechanic.name %></p>
<p>Years of Experience: <%= @mechanic.years_experience %></p>

<% @mechanic.rides.each do |ride| %>
  <p><%= ride.name %></p>
<% end %>

<p>Add Ride by ID</p>
  <%= form_with url: "/ride_mechanics", method: :post, local: true do |form| %>
    <%= form.label :ride_id %>
    <%= form.number_field :ride_id %>
    <%= form.hidden_field :mechanic_id, value: @mechanic.id %>
    <%= form.submit "Add" %>
  <% end %>